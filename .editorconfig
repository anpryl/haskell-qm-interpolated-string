root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.{hs,md,cabal,yml}]
indent_style = space
indent_size = 2

[test/**.hs]
trim_trailing_whitespace = false

[test/LineBreaks/CR/**.hs]
end_of_line = cr

[test/LineBreaks/CRLF/**.hs]
end_of_line = crlf

[*.sh]
indent_style = tab
